.container {
  padding: 16px;
  background: #F8F9FA;
  min-height: 100vh;
}

/* 顶部操作栏 */
.header {
  margin-bottom: 16px;
}

.add-btn {
  background: #4B6CB7;
  color: white;
  font-size: 14px;
  padding: 8px 16px;
  border-radius: 8px;
}

/* 名人列表 */
.celebrity-item {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.celebrity-info {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 12px;
}

.text-info {
  flex: 1;
}

.name {
  font-size: 16px;
  font-weight: 600;
  color: #2C3E50;
  display: block;
  margin-bottom: 4px;
}

.intro {
  font-size: 14px;
  color: #606F7B;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}

.action-btn {
  flex: 1;
  font-size: 14px;
  padding: 6px 12px;
  border-radius: 6px;
  background: #F8F9FA;
  color: #2C3E50;
}

.action-btn.edit {
  background: #4B6CB7;
  color: white;
}

.action-btn.delete {
  background: #FF6B6B;
  color: white;
}

.action-btn.books {
  background: #F8F9FA;
  position: relative;
}

.action-btn.books.active {
  background: #4B6CB7;
  color: white;
}

/* 书籍列表 */
.books-list {
  background: #F8F9FA;
  border-radius: 8px;
  padding: 12px;
  margin-top: 12px;
  display: none;
}

.books-list.show {
  display: block;
}

.book-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 12px;
  border-radius: 8px;
  margin-bottom: 8px;
}

.book-cover {
  width: 40px;
  height: 56px;
  border-radius: 4px;
  margin-right: 12px;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 14px;
  font-weight: 500;
  color: #2C3E50;
  display: block;
  margin-bottom: 4px;
}

.book-author {
  font-size: 12px;
  color: #606F7B;
}

.book-actions {
  display: flex;
  gap: 8px;
}

.book-btn {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 4px;
}

.book-btn.edit {
  background: #4B6CB7;
  color: white;
}

.book-btn.delete {
  background: #FF6B6B;
  color: white;
}

.add-book-btn {
  width: 100%;
  background: #4B6CB7;
  color: white;
  font-size: 14px;
  padding: 8px;
  border-radius: 6px;
  margin-top: 12px;
}
