.container {
  padding: 20px;
  background: #F8F9FA;
  min-height: 100vh;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 32px;
}

.avatar-wrapper {
  position: relative;
  width: 120px;
  height: 120px;
  border-radius: 60px;
  overflow: hidden;
  background: #E2E8F0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper.has-image {
  background: #4B6CB7;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 12px;
  padding: 4px 0;
  text-align: center;
}

.upload-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #718096;
}

.upload-icon {
  font-size: 32px;
  font-weight: 300;
  margin-bottom: 4px;
}

.upload-text {
  font-size: 14px;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 32px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 16px;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 14px;
  color: #2D3748;
  margin-bottom: 8px;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 40px;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 14px;
  color: #2D3748;
  background: #F8F9FA;
}

.textarea {
  width: 100%;
  min-height: 100px;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  padding: 12px;
  font-size: 14px;
  color: #2D3748;
  background: #F8F9FA;
  line-height: 1.5;
}

/* 按钮区域 */
.button-section {
  padding: 0 16px;
}

.save-btn {
  width: 100%;
  height: 44px;
  background: #4B6CB7;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn.disabled {
  background: #A0AEC0;
  opacity: 0.8;
}
