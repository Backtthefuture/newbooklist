/* pages/index/index.wxss */
.container {
  height: 100vh;
}

.swiper-item {
  height: 100%;
  overflow: hidden;
}

.scroll-view {
  height: 100%;
}

/* 名人区域样式 */
.celebrity-section {
  height: 15vh;
  background: linear-gradient(135deg, #4B6CB7 0%, #182848 100%);
  transition: all 0.3s ease;
  padding: 12px;
}

.celebrity-section.minimized {
  height: 10vh;
  padding: 8px;
}

.celebrity-info {
  display: flex;
  align-items: center;
  height: 100%;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  border: 2px solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.minimized .avatar {
  width: 35px;
  height: 35px;
  border-radius: 17.5px;
  border-width: 1.5px;
}

.text-info {
  margin-left: 12px;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.celebrity-name {
  font-size: 16px;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 4px;
  display: block;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.minimized .celebrity-name {
  font-size: 14px;
  margin-bottom: 2px;
}

.celebrity-intro {
  font-size: 12px;
  line-height: 1.3;
  color: rgba(255, 255, 255, 0.9);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.minimized .celebrity-intro {
  font-size: 11px;
  -webkit-line-clamp: 1;
}

/* 书单列表样式 */
.books-container {
  padding: 12px;
  background: var(--background-color, #F8F9FA);
  min-height: 85vh;
}

.book-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.book-card:active {
  transform: scale(0.98);
}

.book-cover {
  width: 90px;
  height: 126px;
  border-radius: 6px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}

.book-info {
  margin-left: 12px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 6px;
}

.book-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-color, #2C3E50);
  flex: 1;
  margin-right: 12px;
}

.book-rating {
  background: rgba(255, 149, 0, 0.1);
  padding: 3px 6px;
  border-radius: 10px;
  min-width: 36px;
  text-align: center;
}

.rating-text {
  font-size: 13px;
  color: #FF9500;
  font-weight: 500;
}

.book-author {
  font-size: 13px;
  color: var(--secondary-text-color, #606F7B);
  margin-bottom: 3px;
}

.book-publisher {
  font-size: 13px;
  color: var(--secondary-text-color, #606F7B);
  margin-bottom: 8px;
}

.book-recommendation {
  background: #F8F8F8;
  padding: 10px;
  border-radius: 6px;
  margin-top: auto;
}

.recommendation-text {
  font-size: 13px;
  color: var(--secondary-text-color, #606F7B);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
